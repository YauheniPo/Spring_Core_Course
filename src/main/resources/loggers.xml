<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="popo.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileLogger" class="popo.epam.spring.core.loggers.FileEventLogger"
          init-method="init" abstract="true">
        <constructor-arg value="log/logfile.log"/>
    </bean>

    <bean id="cacheFileLogger" class="popo.epam.spring.core.loggers.CacheFileEventLogger"
          init-method="init" destroy-method="destroy" parent="fileLogger">
        <constructor-arg value="5"/>
    </bean>
</beans>