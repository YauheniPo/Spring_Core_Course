<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="loggers.xml"/>
    <import resource="utils.xml"/>

    <bean id="client" class="popo.epam.spring.core.beans.Client" p:greeting="${greeting}" c:id="${id}" c:fullName="${name}">
        <property name="properties">
            <props>
                <prop key="status">private</prop>
            </props>
        </property>
        <!--<property name="event">-->
        <!--<bean class="popo.epam.spring.core.beans.Event"/>-->
        <!--</property>-->
        <!--<constructor-arg value="${id}"/> &lt;!&ndash;index="0" value="1"&ndash;&gt; &lt;!&ndash;type="java.lang.Integer" value="1"&ndash;&gt;-->
        <!--<constructor-arg value="${name}"/> &lt;!&ndash;index="1" value="YauheniPo"&ndash;&gt; &lt;!&ndash;name="fullName" value="YauheniPo"&ndash;&gt;-->
    </bean>

    <bean id="event" class="popo.epam.spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="app" class="popo.epam.spring.core.App" scope="singleton"><!--depends-on="client, cacheFileLogger"-->
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
        <constructor-arg ref="loggerMap"/>
    </bean>
</beans>